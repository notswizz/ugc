rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function canAccessContract(contractId) {
      return isAuthenticated() && exists(/databases/$(database)/documents/contracts/$(contractId)) &&
             (get(/databases/$(database)/documents/contracts/$(contractId)).data.brandId == request.auth.uid ||
              get(/databases/$(database)/documents/contracts/$(contractId)).data.creatorId == request.auth.uid);
    }

    function canAccessCampaign(campaignId) {
      return exists(/databases/$(database)/documents/campaigns/$(campaignId)) &&
             (get(/databases/$(database)/documents/campaigns/$(campaignId)).data.status == 'published' ||
              (isAuthenticated() && get(/databases/$(database)/documents/campaigns/$(campaignId)).data.brandId == request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Creators collection
    match /creators/{creatorId} {
      allow read: if true; // Public profiles
      allow write: if isOwner(creatorId);
    }

    // Brands collection
    match /brands/{brandId} {
      allow read: if isAuthenticated(); // Brands can see each other
      allow write: if isOwner(brandId);
    }

    // Usage rights templates
    match /usageRightsTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == resource.data.createdByBrandId;
    }

    // Campaigns collection
    match /campaigns/{campaignId} {
      allow read: if canAccessCampaign(campaignId);
      allow write: if isAuthenticated() && request.auth.uid == resource.data.brandId;
      allow create: if isAuthenticated();

      // Campaign applications
      match /applications/{applicationId} {
        allow read: if canAccessCampaign(campaignId);
        allow write: if isAuthenticated() && request.auth.uid == resource.data.creatorId;
        allow create: if isAuthenticated();
      }

      // Campaign briefs
      match /brief/current {
        allow read: if canAccessCampaign(campaignId);
        allow write: if isAuthenticated() && request.auth.uid == get(/databases/$(database)/documents/campaigns/$(campaignId)).data.brandId;
      }
    }

    // Contracts collection
    match /contracts/{contractId} {
      allow read: if canAccessContract(contractId);
      allow write: if canAccessContract(contractId);
      allow create: if isAuthenticated();

      // Contract milestones
      match /milestones/{milestoneId} {
        allow read, write: if canAccessContract(contractId);
        allow create: if canAccessContract(contractId);
      }

      // Contract deliverables
      match /deliverables/{deliverableId} {
        allow read, write: if canAccessContract(contractId);
        allow create: if canAccessContract(contractId);
      }
    }

    // Threads and messages
    match /threads/{threadId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow write: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated();

      match /messages/{messageId} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;
        allow write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;
        allow create: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;
      }
    }

    // Ratings
    match /ratings/{ratingId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == resource.data.fromId;
      allow create: if isAuthenticated();
    }

    // Disputes
    match /disputes/{disputeId} {
      allow read: if isAuthenticated() && canAccessContract(resource.data.contractId);
      allow write: if isAuthenticated() && canAccessContract(resource.data.contractId);
      allow create: if isAuthenticated();
    }

    // Admin logs (admin only)
    match /adminLogs/{logId} {
      allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if isAuthenticated();
    }

    // Jobs collection
    match /jobs/{jobId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == resource.data.brandId;
      allow create: if isAuthenticated();
    }

    // Submissions collection
    match /submissions/{submissionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == resource.data.creatorId || 
                                            get(/databases/$(database)/documents/jobs/$(resource.data.jobId)).data.brandId == request.auth.uid);
      allow create: if isAuthenticated();
    }
  }
}